    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

    /* ===== HEADER GRIS (2e header) ===== */
    .legal-banner{
      background:#f3f4f6;
      padding:40px 20px 60px;
      text-align:center;
      font-family:'Poppins',sans-serif;
      border-bottom:1px solid #e5e7eb;
