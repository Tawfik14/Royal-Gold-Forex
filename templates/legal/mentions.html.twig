    .legal{
      max-width:880px;
      margin:0 auto;
      padding:50px 20px 60px;
      font-family:'Poppins',sans-serif;
      color:#0b1220;
    }
    .legal h2{
      font-size:18px;
      font-weight:600;
      margin:36px 0 10px;
    }
    .legal p, .legal li{
